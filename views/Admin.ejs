<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="bootstrap-4.4.1-dist/css/bootstrap.css">
    <link rel="stylesheet" href="css/style1.css">
    <title>Home</title>
</head>
<body>
    <div class="container-fluid top">
        <div class="heading">
            Student Councelling
        </div>
    </div>
    <nav class="navbar navbar-light bg-light">
        <form class="form-inline" >
            <a class="nav-link " href="./Admin">Home</a>
            <a class="nav-link " href="./Update">Update</a>
            <a class="nav-link " href="/logout">Logout</a>
            
        </form>
        <form action="/Start" method="POST" >
            <input type="submit" class="btn  btn-outline-Success" value="Start Councelling">
        </form>
        <form action="/Stop" method="POST" >
            <input type="submit" class="btn btn-outline-Danger" value="Stop Councelling">
        </form>
        <form action="/Allot" method="POST" >
            <input type="submit" class="btn btn-outline-Success" value="Allot">
        </form>

        <form action="/clearAllot" method="POST" >
            <input type="submit" class="btn btn-outline-danger" value="Clear Allotment">
        </form>

    </nav>
     

    <div class="contianer-fluid tot">
        <div class="container-fluid">
            
            <% if(list[0].Allotment ==1) { %>
                <ul class="list-inline ">
                    <li class="list-inline-item Allot" >Seat Allotment Status : Alloted</li>
                </ul>
            <%} %>
            <% if(list[0].Allotment ==2) { %>
                <ul class="list-inline ">
                    <li class="list-inline-item notAllot " >Seat Allotment Status : Not Alloted </li>
                </ul>
            <%} %>


            <% if(list[0].Councelling ==0) { %>
                <ul class="list-inline ">
                    <li class="list-inline-item  " >Councelling Status : Not Started </li>
                </ul>
            <%} %>
            <% if(list[0].Councelling ==1) { %>
                <ul class="list-inline ">
                    <li class="list-inline-item  " >Councelling Status : Started </li>
                </ul>
            <%} %>
            <% if(list[0].Councelling ==2) { %>
                <ul class="list-inline  ">
                    <li class="list-inline-item  " >Councelling Status : Completed </li>
                </ul>
            <%} %>
        </div>
        
      
    </div>

    
</body>
</html>