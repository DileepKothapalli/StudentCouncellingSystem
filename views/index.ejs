<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="bootstrap-4.4.1-dist/css/bootstrap.css" >
    <link rel="stylesheet" href="css/style.css">
    <title>Document</title>
</head>
<body>
      <div class="container-fluid">

        <% if(message != "") { %>
          <div class="alert alert-danger al">
            <%= message %>
          </div>
          
        <% } %>
        
          <div class="d-flex flex-column">
            <div class="d-flex flex-row-reverse login-form">
              <div class="p-2 ">
                <form action="/login" method="POST" class="form-inline">
                  <div class="form-group mx-sm-3 mb-2">
                    <label for="inputPassword2" class="sr-only">Password</label>
                    <input type="text" class="form-control" name="inputUsername" placeholder="Username">
                  </div>
                  <div class="form-group mx-sm-3 mb-2">
                    <label for="inputPassword2" class="sr-only">Password</label>
                    <input type="password" class="form-control" name="inputPassword" placeholder="Password">
                  </div>
                  <input type="submit" class="btn btn-primary" value="Login">
                      
                </form>

                <form action="/Adminlogin" method="POST" class="adminlogin">
                  <input type="submit" class="btn btn-success" value="Login as Admin">
                </form>
              </div>
            </div>
            
            <div class="d-flex flex-row-reverse reg-form">
              <div class="p-2">
                <form action="/register" method="POST" class="px-4 py-3 ">
                  <div class="form-group">
                    <input type="text" class="form-control" name="username1" placeholder="Username">
                  </div>
                  <div class="form-group">
                    <input type="text" class="form-control" name="Fullname" placeholder="Fullname">
                  </div>
                  
                  <div class="form-group">
                    <input type="text" class="form-control" name="Rollnumber" placeholder="Rollnumber">
                  </div>
                  <div class="form-group ">
                    <input type="password" class="form-control" name="password1" placeholder="Password">
                  </div>
                  <div class="form-group ">
                    <input type="password" class="form-control" name="confirmPassword1" placeholder="Confirm-Password">
                  </div>
                
                  <input id="btn-register" type="submit" class="btn btn-primary" value="Register">
                </form>
                <div class="dropdown-divider"></div>
              </div>
            </div>
          </div>
      </div>
</body>
</html>